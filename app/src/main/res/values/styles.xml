<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="colorControlHighlight">#40FFFFFF</item>-->
    </style>
    <style name="AppThemeImage" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/translucent</item>
        <item name="colorPrimaryDark">@color/translucent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentNavigation">true</item>
       <!-- <item name="colorControlHighlight">#40FFFFFF</item>-->
    </style>
    <style name="ButtonSecondary">
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>
</resources>
